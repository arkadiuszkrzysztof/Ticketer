<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="LoginPage">
        <item name="android:background">@color/TicketerGray</item>
    </style>
    
    <style name="BigButton">
        <item name="android:background">@drawable/round_background_ticketerblue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">10pt</item>
        <item name="android:paddingRight">10pt</item>
    </style>
    
    <style name="BigInput">
        <item name="android:background">@drawable/round_background_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10pt</item>
        <item name="android:paddingRight">10pt</item>
        <item name="android:textColorHint">@color/TicketerBlue</item>
    </style>
    
    <style name="ErrorLabel">
        <item name="android:textColor">@color/TicketerRed</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="SuccessLabel">
        <item name="android:textColor">@color/TicketerGreen</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="StatusBar">
        <item name="android:textColor">@color/TicketerGray</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@color/TicketerBlue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">70dp</item>
    </style>
    
    <style name="SmartShorts">
        <item name="android:textColor">@color/TicketerBlue</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@color/TicketerGray</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">70dp</item>
    </style>
    
    <style name="Greeter">
        <item name="android:textColor">@color/TicketerBlue</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DateTime">
        <item name="android:textColor">@color/TicketerBlue</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
